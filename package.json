{
    "name": "@topgunbuild/textencoder",
    "version": "0.0.0",
    "description": "An isomorphic encode/decode Uint8Arrays to strings for Javascript in Node and the browser",
    "publishConfig": {
        "access": "public"
    },
    "files": [
        "dist"
    ],
    "types": "./dist/browser.d.ts",
    "module": "./dist/browser.mjs",
    "exports": {
        "require": "./dist/node.js",
        "import": "./dist/browser.mjs"
    },
    "scripts": {
        "build": "tsup",
        "prepublishOnly": "pnpm run build",
        "test": "jest",
        "lint": "eslint \"src/**/*.ts\" --fix",
        "prepare": "simple-git-hooks",
        "semantic-release": "semantic-release"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/TopGunBuild/textencoder.git"
    },
    "keywords": [
        "isomoprhic",
        "decode",
        "encode",
        "browser",
        "node"
    ],
    "author": "ivan@topgun.build",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/TopGunBuild/textencoder/issues"
    },
    "homepage": "https://github.com/TopGunBuild/textencoder#readme",
    "devDependencies": {
        "@release-it/conventional-changelog": "^7.0.0",
        "@types/jest": "^29.5.0",
        "@types/node": "^20.2.5",
        "@typescript-eslint/eslint-plugin": "^5.57.1",
        "@typescript-eslint/parser": "^5.57.1",
        "eslint": "^8.38.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-plugin-import": "^2.27.5",
        "jest": "^29.5.0",
        "lint-staged": "^13.2.1",
        "release-it": "^16.1.5",
        "rimraf": "^5.0.1",
        "simple-git-hooks": "^2.8.1",
        "ts-jest": "^29.1.0",
        "tsup": "^6.7.0",
        "typescript": "4.9.4"
    },
    "lint-staged": {
        "**/*.{ts}": [
            "eslint \"src/**/*.ts\" --fix"
        ]
    },
    "simple-git-hooks": {
        "pre-commit": "npx lint-staged"
    }
}
